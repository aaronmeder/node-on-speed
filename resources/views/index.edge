<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Your Speedtests</title>
  {{ style('style') }}
</head>

<body>
  <h1>Your Speedtests</h1>
  <section class="speedtests__list">
    
    <table class="speedtests__table">

      <thead class="speedtests__header">
        <tr>
          <th>Date</th>
          <th>Download</th>
          <th>Upload</th>
        </tr>
      </thead>

      <tbody>
        @each(speedtest in speedtests)
          <tr class="speedtest">
            <td>{{ speedtest.created_at }}</td>
            <td>{{ speedtest.download / 125000 }} Mbps</td>
            <td>{{ speedtest.upload / 125000 }} Mbps</td>
          </tr>
        @endeach
      </tbody>

      <tfoot class="speedtests__footer">
        <tr>
          <td>Average</td>
          <td>{{ averageDownload / 125000 }} Mbps</td>
          <td>{{ averageUpload / 125000 }} Mbps</td>
        </tr>
      </tfoot>

    </table> 

  </section>
</body>

</html>
